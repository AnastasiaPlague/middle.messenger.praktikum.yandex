{
  "name": "middle.messenger.praktikum.yandex",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "vite build && node server.js",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "npm run typecheck && npm run eslint",
    "lint:styles": "npm run stylelint",
    "prettier": "prettier --parser typescript --single-quote --write \"src/**/*.{ts,tsx}\"",
    "stylelint": "stylelint \"src/**/*.{css,scss}\" --fix",
    "eslint": "eslint src/ --ext=.ts,.tsx --fix",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.1",
    "sass": "^1.67.0",
    "stylelint": "^15.11.0",
    "stylelint-config-recommended": "^13.0.0",
    "stylelint-config-sass-guidelines": "^10.0.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  },
  "dependencies": {
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "nanoid": "^3.3.6",
    "vite-plugin-handlebars": "^1.6.0"
  },
  "engines": {
    "node": "^18.15.0"
  }
}
